<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.vetcare360.controllers.OwnerDetailsController"
      alignment="TOP_CENTER"
      spacing="20"
      style="-fx-background-color: #f0f0f0; -fx-padding: 20;">

    <Label text="Owner Information" style="-fx-text-fill: red; -fx-font-size: 24px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"
               style="-fx-text-fill: #333333; -fx-font-weight: bold;" />
        <Label fx:id="nameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"
               style="-fx-text-fill: #000080;" />

        <Label text="Address:" GridPane.rowIndex="1" GridPane.columnIndex="0"
               style="-fx-text-fill: #333333; -fx-font-weight: bold;" />
        <Label fx:id="addressLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"
               style="-fx-text-fill: #000080;" />

        <Label text="City:" GridPane.rowIndex="2" GridPane.columnIndex="0"
               style="-fx-text-fill: #333333; -fx-font-weight: bold;" />
        <Label fx:id="cityLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"
               style="-fx-text-fill: #000080;" />

        <Label text="Telephone:" GridPane.rowIndex="3" GridPane.columnIndex="0"
               style="-fx-text-fill: #333333; -fx-font-weight: bold;" />
        <Label fx:id="telephoneLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"
               style="-fx-text-fill: #000080;" />
    </GridPane>

    <HBox spacing="10">
        <Button text="Edit Owner"
                onAction="#handleEditOwner"
                style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;" />
        <Button text="Add New Pet"
                onAction="#handleAddNewPet"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;" />
    </HBox>

    <Label text="Pets and Visits" style="-fx-text-fill: darkred; -fx-font-size: 20px; -fx-font-weight: bold;" />

    <TableView fx:id="petsTable"
               prefHeight="300"
               prefWidth="800"
               style="-fx-border-color: gray; -fx-border-width: 1px;">
        <columns>
            <TableColumn fx:id="petNameColumn" text="Pet Name" prefWidth="200" />
            <TableColumn fx:id="petBirthDateColumn" text="Birth Date" prefWidth="200" />
            <TableColumn fx:id="petTypeColumn" text="Type" prefWidth="150" />
            <TableColumn fx:id="petActionsColumn" text="Actions" prefWidth="250" />
        </columns>
    </TableView>

</VBox>
